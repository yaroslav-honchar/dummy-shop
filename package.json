{
  "name": "dummy-shop",
  "version": "0.1.0",
  "private": true,
  "scripts": {
    "dev": "next dev",
    "build": "next build",
    "start": "next start",
    "lint": "next lint",
    "fix:eslint": "eslint src/**/*.{ts,tsx} --fix --config .eslintrc.json",
    "fix:stylelint": "stylelint src/**/*.css --fix"
  },
  "husky": {
    "hooks": {
      "pre-commit": "lint-staged"
    }
  },
  "lint-staged": {
    "*.ts?(x)": [
      "npm run fix:eslint",
      "git add ."
    ],
    "*.css": [
      "npm run fix:stylelint",
      "git add ."
    ]
  },
  "dependencies": {
    "classnames": "^2.3.2",
    "js-cookie": "^3.0.5",
    "next": "14.0.1",
    "react": "^18",
    "react-dom": "^18"
  },
  "devDependencies": {
    "@types/js-cookie": "^3.0.6",
    "@types/node": "^20",
    "@types/react": "^18",
    "@types/react-dom": "^18",
    "@typescript-eslint/eslint-plugin": "^5.42.0",
    "eslint": "^8.50.0",
    "eslint-config-next": "13.4.19",
    "eslint-config-prettier": "^9.0.0",
    "husky": "^4.3.8",
    "lint-staged": "^14.0.1",
    "prettier": "^3.0.3",
    "stylelint": "^15.10.3",
    "stylelint-config-recess-order": "^4.3.0",
    "stylelint-config-standard": "^34.0.0",
    "typescript": "^5"
  }
}
